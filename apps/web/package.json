{
  "name": "@portfolio/web",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "pnpm run lint:oxlint && pnpm run lint:eslint",
    "lint:oxlint": "pnpx oxlint || true",
    "lint:eslint": "pnpx eslint .",
    "i18n:coverage": "node node_modules/@portfolio/ui/node_modules/@portfolio/nuxt-essentials/i18n/utils/coverage.ts -f ./i18n/locales"
  },
  "dependencies": {
    "@portfolio/ui": "workspace:^",
    "nuxt": "catalog:",
    "tweakpane": "^4.0.5",
    "vue": "catalog:",
    "vue-router": "catalog:"
  },
  "devDependencies": {
    "@nuxt/eslint": "1.7.1",
    "@portfolio/eslint": "workspace:^",
    "@portfolio/oxlint": "workspace:^",
    "@portfolio/prettier": "workspace:^",
    "@tweakpane/core": "^2.0.5"
  },
  "lint-staged": {
    "**/*.{json,js,ts,md,yaml,yml,vue}": [
      "oxlint --fix",
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prettier": "@portfolio/prettier"
}
